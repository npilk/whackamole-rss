<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whackamole RSS</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.png">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-100 min-h-screen">
    <nav class="bg-white shadow-md shadow-slate-200">
        <div class="max-w-4xl mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center space-x-2">
                    <img src="/favicon.png" alt="whackamole logo" class="w-10 h-10" style="margin-bottom:4px;">
                    <h1 class="text-xl font-bold text-gray-800"><a href="/"><span class="hidden sm:inline">Whackamole </span>RSS</a></h1>
                </div>
                <div class="flex space-x-2 sm:space-x-4 font-normal text-gray-700">
                    <a href="/" class="hover:text-gray-900 whitespace-nowrap <%= view === 'unread' ? 'font-bold text-gray-900' : '' %>">Unread</a>
                    <a href="/archive" class="hover:text-gray-900 whitespace-nowrap <%= view === 'archive' ? 'font-bold text-gray-900' : '' %>">Archive</a>
                    <a href="/feeds" class="hover:text-gray-900 whitespace-nowrap <%= view === 'feeds' ? 'font-bold text-gray-900' : '' %>">
                        <span class="hidden sm:inline">Manage Feeds</span>
                        <span class="sm:hidden">Feeds</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-4xl mx-auto px-4 py-8">
        <%- body %>
    </main>

    <script>
        // Mark article as read when link is clicked
        document.addEventListener('click', function(e) {
            const link = e.target.closest('.article-link');
            if (link && !link.classList.contains('read')) {
                const articleId = link.dataset.articleId;
                
                // Mark as read immediately in UI
                link.classList.add('read');
                link.style.opacity = '0.6';
                
                // Send request to server
                fetch(`/articles/${articleId}/read`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                }).catch(error => {
                    console.error('Error marking as read:', error);
                    // Revert UI change on error
                    link.classList.remove('read');
                    link.style.opacity = '1';
                });
                
                // If we're on the unread page, fade out the article after a delay
                if (window.location.pathname === '/') {
                    setTimeout(() => {
                        link.closest('.article-item').style.display = 'none';
                    }, 500);
                }
            }
        });

        // Delete feed functionality
        function deleteFeed(feedId) {
            if (confirm('Are you sure you want to delete this feed? This will also delete all its articles.')) {
                fetch(`/feeds/${feedId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error deleting feed');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error deleting feed');
                });
            }
        }

        // Mark all articles as read
        function markAllAsRead() {
            if (confirm('Mark all articles as read? This will clear your entire unread list.')) {
                fetch('/articles/mark-all-read', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error marking all as read');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error marking all as read');
                });
            }
        }

        // Mark individual article as read without opening link
        function markAsReadOnly(articleId, event) {
            event.preventDefault();
            event.stopPropagation();
            
            const articleItem = event.target.closest('.article-item');
            
            // Mark as read immediately in UI
            articleItem.style.opacity = '0.6';
            
            // Send request to server
            fetch(`/articles/${articleId}/read`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Fade out the article after a delay
                    setTimeout(() => {
                        articleItem.style.display = 'none';
                    }, 500);
                } else {
                    // Revert UI change on error
                    articleItem.style.opacity = '1';
                    alert('Error marking as read');
                }
            })
            .catch(error => {
                console.error('Error marking as read:', error);
                // Revert UI change on error
                articleItem.style.opacity = '1';
                alert('Error marking as read');
            });
        }
    </script>
</body>
</html>